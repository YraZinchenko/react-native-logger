{
  "compilerOptions": {
    "rootDir": "src",
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6", "dom", "es2017", "es2016"],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "include" : [
    "src/index.ts"
  ]
}